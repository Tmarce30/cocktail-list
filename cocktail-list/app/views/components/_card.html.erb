<% @cocktails.each do |cocktail| %>
  <div class="col-xs-12 col-sm-4">
    <%= link_to cocktail_path(cocktail) do %>
      <div class="card" style="background-image: url('<%= cl_image_path cocktail.photo, crop: :fill, class: "img-responsive" %>');">
        <div class="card-description">
          <h2><%= cocktail.name %></h2>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
