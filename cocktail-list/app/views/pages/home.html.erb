<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Hello world !</h1>
    </div>
  </div>

  <h3><%= link_to 'All cocktails', cocktails_path %></h3>

  <h4><%= link_to 'Add a cocktail', new_cocktail_path %></h4>

  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <p><%= cocktail.name %></p>
      </div>
    <% end %>
  </div>
</div>
