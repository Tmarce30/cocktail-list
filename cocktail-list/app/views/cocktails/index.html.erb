<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>All cocktails</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <h4><%= link_to 'Home', root_path %></h4>
    </div>
  </div>

  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <h4><%= link_to cocktail.name, cocktail_path(cocktail) %></h4>
        <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill %>
      </div>
    <% end %>
  </div>
</div>
