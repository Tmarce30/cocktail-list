<div class="container">
  <div class="row">
    <h1>All cocktails</h1>
  </div>

  <% @cocktails.each do |cocktail| %>
    <div class="row">
      <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
      <p><%= cocktail.description %></p>
      <p><%= cocktail.recipe %></p>
    </div>
  <% end %>
</div>
