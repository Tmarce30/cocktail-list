<div class="container">
  <div class="row">
    <h1><%= @cocktail.name %></h1>
  </div>

  <% @cocktail.doses.each do |dose| %>
    <div class="row">
      <p><%= dose.ingredient.name %> : <%= dose.description %></p>
      <%= link_to dose_path(dose), method: :delete do %>
        <i class="fas fa-times"></i>
      <% end %>
    </div>
  <% end %>

  <div class="row">
    <p><%= @cocktail.description %></p>
  </div>
  <div class="row">
    <p><%= @cocktail.recipe %></p>
  </div>

  <div class="row">
    <h3><%= link_to 'All cocktails', cocktails_path %></h3>
  </div>
</div>
