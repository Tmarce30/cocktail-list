<div class="container">
  <div class="row">
    <h1><%= @cocktail.name %></h1>
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  </div>

  <div class="row">
    <% @cocktail.doses.each do |dose| %>
      <p><%= dose.ingredient.name %> : <%= dose.description %></p>
      <%= link_to dose_path(dose), method: :delete do %>
        <i class="fas fa-times"></i>
      <% end %>
    <% end %>
  </div>

  <div class="row">
    <p><%= @cocktail.description %></p>
  </div>
  <div class="row">
    <p><%= @cocktail.recipe %></p>
  </div>

  <div class="row">
    <h3><%= link_to 'All cocktails', cocktails_path %></h3>
  </div>
</div>
